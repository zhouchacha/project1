<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
   
   <RelativeLayout
    	android:id="@+id/history_item_date"
   		android:layout_width="fill_parent"
    	android:layout_height="40dp"
    	android:background="@drawable/date_background"
   		>
      <TextView
            android:id="@+id/history_clock_tv"
            android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center"
	        android:layout_marginTop="13dp"
	        android:textColor="#0099ff"
	        android:textSize="15sp"
	        />
	</RelativeLayout>    
	 
    <RelativeLayout
    	android:id="@+id/history_item_rl"
   		android:layout_width="fill_parent"
    	android:layout_height="80dp"
    	android:orientation="horizontal"
    	android:background="@drawable/historyitem_select" >
        <ImageView
    	    android:id="@+id/history_loc_img"
    	    android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dp"  
	        android:layout_marginTop="20dp"
	        android:layout_marginBottom="20dp"
	        android:src="@drawable/pin"
	        android:contentDescription="@string/app_name"/>
        
    	<TextView
    	    android:id="@+id/history_start_to_endtime_tv"
    	    android:layout_width="wrap_content"
	        android:layout_height="40dp"
	        android:layout_gravity="center"          
	        android:textSize="20sp"
	        android:textColor="#000"
	        android:layout_centerInParent="true"
	        />
    		
    <ImageView
    	    android:id="@+id/history_into_img"
    	    android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	       	android:layout_marginTop="30dp"
	       	android:layout_marginBottom="30dp"
	       	android:layout_marginRight="10dp"
	        android:src="@drawable/into_icon"
	        android:contentDescription="@string/app_name"/>
	        
	   <CheckBox 
        	android:id="@+id/check"
       	 	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_alignParentRight="true"
       	 	android:layout_marginTop="30dp"
	       	android:layout_marginBottom="30dp"
	       	android:layout_marginRight="10dp"
	       	android:visibility="gone"
       	 	android:clickable="false"
        />
        </RelativeLayout>
      
</LinearLayout>
